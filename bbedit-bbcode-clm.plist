<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
	"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
		
<dict>
	<!-- You must identify the plist as a CLM: -->
	<key>BBEditDocumentType</key>
	<string>CodelessLanguageModule</string>
	
	<!-- You must identify your language: -->
	<key>BBLMLanguageDisplayName</key>  <string>BBCode</string>
	<key>BBLMLanguageCode</key>         <string>BBCd</string>
	
	<!-- Not required, but there’s not much point to
	     a language module if it doesn’t color syntax: -->
	<key>BBLMColorsSyntax</key>         <true/>
	
	<!-- Specify some keywords. This isn’t required, either,
             but it provides something to color: -->
	<key>BBLMKeywordList</key>
	<array>
		<string>b</string>
		<string>/b</string>
		<string>i</string>
		<string>/i</string>
		<string>u</string>
		<string>/u</string>
		<string>s</string>
		<string>/s</string>
		<string>size</string>
		<string>/size</string>
		<string>color</string>
		<string>/color</string>
		<string>center</string>
		<string>/center</string>
		<string>quote</string>
		<string>/quote</string>
		<string>url</string>
		<string>url=</string>
		<string>/url</string>
		<string>img</string>
		<string>/img</string>
		<string>ul</string>
		<string>/ul</string>
		<string>ol</string>
		<string>/ol</string>
		<string>list</string>
		<string>/list</string>
		<string>li</string>
		<string>/li</string>
		<string>*</string>
		<string>code</string>
		<string>/code</string>
		<string>table</string>
		<string>/table</string>
		<string>tr</string>
		<string>/tr</string>
		<string>th</string>
		<string>/th</string>
		<string>td</string>
		<string>/td</string>
		<string>youtube</string>
		<string>/youtube</string>
		<string>gvideo</string>
		<string>/gvideo</string>
	</array>
	
	<key>BBLMSuffixMap</key>
	<array>
		<dict>
			<key>BBLMLanguageSuffix</key>
			<string>.bbcode*</string>
		</dict>
		<dict>
			<key>BBLMLanguageSuffix</key>
			<string>.bbc</string>
		</dict>
	</array>
	
	<!-- Specify a comment-out string: -->
	<key>BBLMCommentLineDefault</key>   <string>#</string>
	
	<!-- You must specify the character set for
             keywords and identifiers. Substitute your own:  -->
	<key>Language Features</key>
	<dict>
		<key>Identifier and Keyword Character Class</key>
		<string>A-Za-z0-9_\?!\*</string>
	</dict>
	
	<key>Open Strings 1</key>	<string>[</string>
	<key>Close Strings 1</key>	<string>]</string>
</dict>
</plist>